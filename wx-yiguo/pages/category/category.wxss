.common-icon {
	font-size: 30px;
}

.category-head .active {
	color: #ff4633;
}

.category {
	height: 100vh;
}

.category-title{
	width: 100%;
	height: 30px;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 12px;
}

.category-title text{
	font-size: 20px;
	font-weight: 300;
	letter-spacing: 1.5px;
}

.category-main {
	display: flex;
}

.category-head {
	width: 28%;
	height: calc(100vh - 42px);
	display: flex;
	flex-direction: column;
	/* border-right: 1px solid #ccc; */
	margin-right: 15px;
	background-color: #fafafa;
}

.head-item {
	width: 100%;
	height: 50px;
	line-height: 50px;
	display: flex;
	align-items: center;
	justify-content: space-around;
	/* border-bottom: 1px solid #ccc; */
	color: #666;
	padding: 0 10px;
	box-sizing: border-box;
}

.head-item .item-text {
	font-size: 16px;
}

.category-con {
	flex: 1;
}

.con-item {
	display: flex;
	padding: 4px 0;
	/* border-bottom: 1px solid #ccc; */
	margin-bottom: 6px;
}


.con-item .item-img {
	width: 80px;
	height: 70px;
	margin-right: 24px;
}

.con-item .item-img image {
	width: 100%;
	height: 100%;
	border-radius: 5px;

}

.item-right {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.item-right .title{
	font-weight: 300;
}

.price {
	color: #ff4633;
}