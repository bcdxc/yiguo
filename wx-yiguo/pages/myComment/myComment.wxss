my-comment {
	height: 100vh;
}

.comment-head {
	width: 100%;
	height: 30px;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 12px;
}

.comment-head text {
	font-size: 20px;
	font-weight: 300;
	letter-spacing: 1.5px;
}

.comment-main {
	box-sizing: border-box;
	padding: 0 20px;
}

.comment-item {
	display: flex;
	flex-direction: column;
	font-size: 16px;
	font-weight: 300;
	border-radius: 10px;
	border: 1px solid #dedede;
	background-color: #fff;
	box-shadow: 1px 1px 1px 1px #eee;
	margin-bottom: 6px;
	padding: 8px 10px;
	box-sizing: border-box;
}

.comment-item .order {
	border-bottom: 1px solid #eee;
	padding-bottom: 5px;
}

.comment-item .cont {
	padding-top: 5px;
}

.else-empty {
	width: 100%;
	height: 30px;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 20px;
}

.else-empty text {
	color: rgba(100, 100, 100, .7);
	font-weight: 300;
	font-size: 18px;
	letter-spacing: 1.5px;
}