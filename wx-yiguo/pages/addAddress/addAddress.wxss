.add-address{
	height: 100vh;
	width: 100%;
}
.add-head{
	width: 100%;
	height: 30px;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 20px;
}
.add-head text{
	font-size: 20px;
	font-weight: 300;
	letter-spacing: 1.5px;
}
.add-con{
	height: calc(100% - 50px);
	padding: 0 10px;
	box-sizing: border-box;
	position: relative;
}
.add-con .my-button{
	width: 95px;
	position: absolute;
	bottom: 85px;
	left: 50%;
	transform: translateX(-50%);
}