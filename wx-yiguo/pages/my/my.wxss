/* pages/my/my.wxss */
.my {
	height: 100vh;
	background-color: #eee;
	color: #fff;
}

.my-head {
	width: 100%;
	height: 150px;
	background-color: #3a3a3a;
	display: flex;
	align-items: center;
	position: relative;
}

.my-icon {
	color: #fff;
	font-size: 60px;
}

.head-mes {
	display: flex;
	flex-direction: column;
	margin-top: -3px;
}

.ctrl-text {
	margin-bottom: 5px;
}

.protrait {
	margin-left: 24px;
}

.logo {
	width: 50px;
	height: 50px;
	position: absolute;
	top: 14px;
	right: 24px;
}

.my-con {
	padding: 0 10px;
	color: #000;
	margin-top: 6px;
}

.my-con-title {
	height: 40px;
	line-height: 40px;
	font-size: 20px;
	font-weight: 300;
	letter-spacing: 2px;
}

.domain {
	border-radius: 8px;
	overflow: hidden;
}

.domain .common {
	line-height: 45px;
	height: 45px;
	background-color: #fff;
	display: flex;
	justify-content: space-between;
	padding: 0 8px 0 12px;
}

.domain-text {
	font-size: 14px;
	letter-spacing: 1.4px;
}

.my-foot {
	margin-top: 15px;
	height: 70px;
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}
.my-foot text{
	color: #999;
	font-size: 14px;
}