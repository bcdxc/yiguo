.home {
  height: 100vh;
  background-color: #fdfdfd;
}

.swiper {
  height: 160px;
}

.swiper .swiper-item image {
  width: 100%;
  height: 100%;
}

.main-nav {
  display: flex;
  justify-content: space-around;

  align-items: center;
  margin-top: 10px;
}

.main-nav .nav-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40px;
  width: 30%;
  border-radius: 5px;
  /* background-color: #eee; */
}

.nav-item text {
  font-size: 16px;
  font-weight: 300;
}

.nav-item .iconfont {
  font-size: 20px;
  margin-right: 5px;
}

.main-con {
  box-sizing: border-box;
  padding: 0 25px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 10px;
}

.main-con .con-item {
  width: 45%;
  height: 140px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* background-color: #fcfcfc; */
  box-sizing: border-box;
  padding: 6px;
  border-radius: 5px;
  margin-bottom: 8px;
}

.con-item image {
  width: 100px;
  height: 80px;
  border-radius: 5px;
}

.con-item text {
  font-weight: 300;
  letter-spacing: 1.3px;
}

.item-mes {
  width: 100%;
  box-sizing: border-box;
  padding: 0 12px;
  display: flex;
  justify-content: space-between;
}

.item-mes text {
  font-size: 14px;
  letter-spacing: 1.1px;
}

.active {
  color: #ff4633;
}